chaine=input("Saisissez une chaine de caractère : ")
mot=input("Saisissez un mot : ")
i=0
if mot in chaine:
    print ("Le mot entré est dans la chaîne")
    for c in chaine :
        if c==mot :
            a=i+1
        else :
            i=i+1
        break
    print("La valeur entrée est la ",a,"e de la chaine.")
else :
    print("Cette valeur n'est pas dans la chaine")

    
    
