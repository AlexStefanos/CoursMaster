chaine=input("Saisissez une chaîne de caractère : ")
esp=" "
liste1=[]
txt=""
txtv=""
liste2=[]
i=0
a=0
for c in chaine :
    if chaine[i]==esp:
        liste1=liste1+[i]
        liste2.append(txt)
        txt=txtv
        i=i+1
    else :
        txt=txt+c
        i=i+1
liste2.append(txt)
txt=txtv
print(chaine)
print(liste2)
