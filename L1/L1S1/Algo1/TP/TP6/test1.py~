import turtle

# Code de configuration de la fenetre
picture_width  = 2000
picture_height = 500
turtle.setup (width=picture_width, height=picture_height)
# Fin de code de configuration de la fenetre

# Ici commence le code pour dessiner

#1er Déplacement
turtle.penup()
turtle.goto(-900,100)
turtle.pendown()

#A
turtle.left(90)
turtle.forward(100)
turtle.right(90)
turtle.forward(100)
turtle.right(90)
turtle.forward(50)
turtle.right(90)
turtle.forward(100)
turtle.backward(100)
turtle.left(90)
turtle.forward(50)

#2e Déplacement
turtle.penup()
turtle.left(90)
turtle.forward(75)
turtle.pendown()

#L
turtle.left(90)
turtle.forward(100)
turtle.backward(100)
turtle.right(90)
turtle.forward(100)

#3e Déplacement
turtle.penup()
turtle.forward(75)
turtle.left(90)
turtle.pendown()

#E
turtle.forward(100)
turtle.right(90)
turtle.forward(100)
turtle.backward(100)
turtle.right(90)
turtle.forward(50)
turtle.left(90)
turtle.forward(100)
turtle.backward(100)
turtle.right(90)
turtle.forward(50)
turtle.left(90)
turtle.forward(100)

#4e Déplacement
turtle.penup()
turtle.forward(50)
turtle.left(90)
turtle.forward(100)
turtle.right(90)
turtle.pendown()

#X
turtle.right(45)
turtle.forward(150)
turtle.left(135)
turtle.penup()
turtle.forward(110)
turtle.left(135)
turtle.pendown()
turtle.forward(150)
turtle.right(135)
turtle.penup()
turtle.forward(55)
turtle.right(90)
turtle.forward(200)
turtle.pendown()
turtle.color("red")
turtle.write("et Sarah aussi")
# Code d'attente pour fermer la fenetre
