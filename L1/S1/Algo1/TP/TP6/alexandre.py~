import turtle

# Code de configuration de la fenetre
picture_width  = 1600
picture_height = 600
turtle.setup (width=picture_width, height=picture_height)
turtle.speed("normal")
turtle.hideturtle()
# Fin de code de configuration de la fenetre

#Configuration des 2 turtles
alex=turtle.Turtle()
stef=turtle.Turtle()
alex.speed("fastest")
stef.speed("fastest")
# Ici commence le code pour dessiner

#Deplacements
alex.penup()
stef.penup()
alex.goto(-700,100)
alex.pendown()
stef.goto(-700,-200)
stef.pendown()

#A S
alex.left(90)
stef.forward(100)
alex.forward(100)
stef.left(90)
alex.right(90)
stef.forward(50)
alex.forward(100)
stef.left(90)
alex.right(90)
stef.forward(100)
alex.forward(50)
stef.right(90)
alex.right(90)
stef.forward(50)
alex.forward(100)
stef.right(90)
alex.backward(100)
stef.forward(100)
alex.left(90)
alex.forward(50)

#Deplacements
alex.penup()
stef.penup()
alex.left(90)
stef.forward(75)
alex.forward(75)
stef.pendown()
alex.pendown()

#L T
alex.left(90)
stef.forward(100)
alex.forward(100)
stef.backward(50)
alex.backward(100)
stef.right(90)
alex.right(90)
stef.forward(100)
alex.forward(100)

#Deplacements 
alex.penup()
stef.penup()
alex.forward(75)
stef.left(90)
alex.left(90)
stef.forward(125)
alex.pendown()
stef.pendown()

#E E
alex.forward(100)
stef.forward(100)
alex.right(90)
stef.backward(100)
alex.forward(100)
stef.left(90)
alex.backward(100)
stef.forward(50)
alex.right(90)
stef.right(90)
alex.forward(50)
stef.forward(100)
alex.left(90)
stef.backward(100)
alex.forward(100)
stef.left(90)
alex.backward(100)
stef.forward(50)
alex.right(90)
stef.right(90)
alex.forward(50)
stef.forward(100)
alex.left(90)
alex.forward(100)

#Deplacements
alex.penup()
stef.penup()
alex.forward(50)
stef.forward(75)
alex.left(90)
alex.forward(100)
alex.right(90)
stef.pendown()
alex.pendown()

#X F
alex.right(45)
stef.forward(100)
alex.forward(150)
stef.backward(100)
alex.left(135)
stef.right(90)
alex.penup()
stef.forward(100)
alex.forward(110)
stef.backward(50)
alex.left(135)
stef.left(90)
alex.pendown()
stef.forward(100)
alex.forward(150)

#Deplacements
alex.right(135)
stef.penup()
alex.penup()
stef.forward(75)
alex.forward(100)
stef.left(90)
alex.right(90)
stef.backward(50)
alex.forward(175)
alex.right(90)
alex.forward(100)
alex.right(270)
stef.pendown()
alex.pendown()

#A A
alex.left(90)
stef.forward(100)
alex.forward(100)
stef.right(90)
alex.right(90)
stef.forward(100)
alex.forward(100)
stef.right(90)
alex.right(90)
stef.forward(100)
alex.forward(50)
stef.backward(50)
alex.right(90)
stef.right(90)
alex.forward(100)
stef.forward(100)
alex.backward(100)
alex.left(90)
alex.forward(50)

#Deplacements
stef.penup()
alex.left(90)
stef.right(180)
alex.penup()
stef.forward(175)
alex.forward(75)
stef.right(90)
alex.left(90)
stef.forward(50)
alex.pendown()
stef.pendown()

#N N
stef.backward(100)
alex.forward(100)
stef.left(45)
alex.right(135)
stef.forward(135)
alex.forward(135)
stef.left(135)
alex.left(135)
stef.forward(100)
alex.forward(100)

#Deplacements
stef.penup()
stef.right(90)
alex.right(90)
stef.forward(100)
alex.penup()
alex.forward(75)
stef.pendown()
alex.pendown()

#D O
stef.circle(-50, 360)
alex.circle(-50, 180)
alex.right(90)
alex.forward(100)

#Deplacements
stef.penup()
alex.right(90)
stef.forward(100)
alex.penup()
alex.forward(125)
stef.pendown()
alex.pendown()

#R S
stef.forward(100)
alex.circle(-25, 180)
stef.backward(100)
alex.right(225)
stef.right(90)
alex.forward(70)
stef.forward(50)
alex.right(135)
stef.left(90)
alex.penup()
stef.forward(100)
alex.forward(50)
stef.right(90)
alex.right(90)
stef.forward(50)
alex.pendown()
stef.right(90)
alex.forward(100)
stef.forward(100)

#Deplacements
stef.penup()
alex.right(90)
stef.backward(175)
alex.penup()
stef.right(90)
stef.forward(50)
stef.right(180)
alex.forward(125)
stef.pendown()
alex.left(90)
alex.backward(100)
alex.pendown()

#E :)
stef.circle(50, 180)
alex.forward(100)
alex.right(90)
stef.penup()
alex.forward(100)
stef.forward(50)
alex.backward(100)
stef.left(90)
alex.right(90)
stef.forward(10)
alex.forward(50)
stef.right(90)
alex.left(90)
stef.pendown()
alex.forward(100)
stef.forward(25)
alex.backward(100)
stef.left(90)
alex.right(90)
stef.penup()
alex.forward(50)
stef.forward(80)
alex.left(90)
stef.right(90)
stef.pendown()
stef.backward(25)
alex.forward(100)

# Code d'attente pour fermer la fenetre
turtle.hideturtle()
stef.hideturtle()
alex.hideturtle()
turtle.exitonclick()
